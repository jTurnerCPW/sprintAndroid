<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_weight="1"
        android:background="@layout/button"
        android:contentDescription="select scanner"
        android:gravity="center_horizontal"
        android:onClick="startScanner"
        android:src="@drawable/qrbypdp" />

    <ImageButton
        android:id="@+id/printerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_weight="1"
        android:background="@layout/button"
        android:contentDescription="select printer"
        android:onClick="startPrinterListActivity"
        android:src="@drawable/select_printer" />

    <ImageButton
        android:id="@+id/userButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:layout_weight="1"
        android:background="@layout/button"
        android:contentDescription="select preferences"
        android:onClick="startPreferences"
        android:src="@drawable/preferences" />

</LinearLayout>