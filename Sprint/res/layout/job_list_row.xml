<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dip"
    android:clickable="true" >

    <ImageView
        android:id="@+id/imgFileType"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:contentDescription="@string/file_type"
        android:src="@drawable/blackwhite_printer" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/imgFileType"
        android:orientation="vertical"
        android:paddingLeft="10sp" >

        <TextView
            android:id="@+id/tvJobName"
            android:paddingRight="35sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvJobUser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/document_owner"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnDeleteJob"
        android:contentDescription="@string/delete"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:src="@drawable/delete" />

</RelativeLayout>